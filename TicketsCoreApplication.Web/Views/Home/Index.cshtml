@{
    ViewData["Title"] = "Tickets Manager";
}


<div class="row">

    <h1>Tickets Manager</h1>

</div>
<div id="filters" class="row">
    <div class="row">

        <div class="col-md-12">

            <div class="row" style="margin-top: 10px;">
                <div class="col-md-12">
                    <fieldset class="scheduler-border">
                        <legend class="scheduler-border">Search</legend>
                        <div class="row">
                            <div class="col-md-3">
                                Ticket Number :
                                <input type="text" class="form-control" id="search-ticket-number" />
                            </div>
                            <div class="col-md-3">
                                Category :
                                <select id="search-category" class="form-control">
                                    <option value="-1">-</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                Status :
                                <select id="search-status" class="form-control">
                                    <option value="-1">-</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                &nbsp;
                                <input type="button" id="search" class="btn" value="Search" style="margin-top : 20px;">
                            </div>

                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row" style="margin-top: 70px;">

    <div class="col-md-12">
        <input type="button" id="new-ticket" value="Create a new ticket" class="btn btn-primary"/>

        <table id="tickets" class="display nowrap dataTable dtr-inline collapsed" style="width: 100%">
            <thead>
                <tr>
                    <th>Ticket Number</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Category</th>
                    <th>Creation Date</th>
                    <th>Last Update Date</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>

    </div>

</div>

<div id="ticket-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                Ticket Details
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>

            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <input type="hidden" id="ticket-number" value="0" />
                                    <input type="text" id="ticket-description" class="form-control" placeholder="Description" />
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-sm-6">
                                    <select id="ticket-category" class="form-control"></select>
                                </div>
                                <div class="col-sm-6">
                                    <select id="ticket-status" class="form-control"></select>
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-md-12">
                                    <input type="text" id="ticket-comment" class="form-control" placeholder="Comment" />
                                </div>
                            </div>
                            <div class="row" style="margin-top: 10px;">
                                <div class="col-md-12">
                                    <input type="button" id="save" class="btn btn-success" value="Save" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

